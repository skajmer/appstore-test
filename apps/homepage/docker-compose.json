{
  "$schema": "../dynamic-compose-schema.json",
  "services": [
    {
      "name": "homepage",
      "image": "ghcr.io/gethomepage/homepage:v1.4.4",
      "internalPort": 3000,
      "volumes": [
        {
          "hostPath": "${APP_DATA_DIR}/data/:/app/config",
          "containerPath": "/app/config"
        }
      ],
      "environment": {
        "HOMEPAGE_ALLOWED_HOSTS": "${APP_DOMAIN},${APP_ID}.${LOCAL_DOMAIN},${INTERNAL_IP}:${APP_PORT}"
      },
      "isMain": true
    }
  ]
}
